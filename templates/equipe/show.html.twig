{% extends 'base.html.twig' %}

{% block title %}Détails de l'Équipe{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Détails de l'Équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Chef</th>
                <td>{{ equipe.chef.nom }}</td>
            </tr>
            <tr>
                <th>Membres</th>
                <td>
                    {% for membre in equipe.membres %}
                        {{ membre.nom }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>État</th>
                <td>{{ equipe.estActive ? 'Active' : 'Inactive' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-warning">Modifier</a>
</div>
{% endblock %}
