{% extends 'base.html.twig' %}

{% block title %}Créer une Équipe{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre principal -->
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">Créer une Équipe</h1>
        <p class="text-secondary">Ajoutez une nouvelle équipe avec ses membres, son chef et son état actif.</p>
    </div>

    <!-- Contenu principal -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Formulaire -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Formulaire de création</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <!-- Nom de l'équipe -->
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom de l\'Équipe', {'label_attr': {'class': 'form-label text-danger fw-bold'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <!-- Chef de l'équipe -->
                    <div class="mb-3">
                        {{ form_label(form.chef, 'Chef de l\'Équipe', {'label_attr': {'class': 'form-label text-danger fw-bold'}}) }}
                        {{ form_widget(form.chef, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.chef) }}
                    </div>

                    <!-- Membres de l'équipe -->
                    <div class="mb-3">
                        {{ form_label(form.membres, 'Membres de l\'Équipe', {'label_attr': {'class': 'form-label text-danger fw-bold'}}) }}
                        <div class="form-check">
                            {% for membre in form.membres %}
                                <div class="form-check-inline">
                                    {{ form_widget(membre, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(membre, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.membres) }}
                    </div>

                    <!-- État actif -->
                    <div class="form-check mb-3">
                        {{ form_widget(form.estActive, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.estActive, 'Equipe active ?', {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(form.estActive) }}
                    </div>

                    <!-- Bouton Créer -->
                    <button type="submit" class="btn btn-danger w-100 mt-3">
                        <i class="fas fa-save"></i> Créer
                    </button>

                    {{ form_end(form) }}
                </div>
            </div>
            <!-- Bouton retour -->
            <div class="mt-4 text-center">
                <a href="{{ path('app_equipe_index') }}" class="btn btn-outline-danger">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
