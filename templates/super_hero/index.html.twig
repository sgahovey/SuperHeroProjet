{% extends 'base.html.twig' %}

{% block title %}Liste des Super Héros{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Super Héros</h1>

    {% if super_heroes|length > 0 %}
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Alter Ego</th>
                    <th>Disponible</th>
                    <th>Niveau d'énergie</th>
                    <th>Biographie</th>
                    <th>Image</th>
                    <th>Créé le</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for super_hero in super_heroes %}
                <tr>
                    <td>{{ super_hero.id }}</td>
                    <td>{{ super_hero.nom }}</td>
                    <td>{{ super_hero.alterEgo }}</td>
                    <td>{{ super_hero.estDisponible ? 'Oui' : 'Non' }}</td>
                    <td>{{ super_hero.niveauEnergie }}</td>
                    <td>{{ super_hero.biographie}}</td>
                    <td>
                        {% if super_hero.nomImage %}
                            <!-- Affiche l'image si elle existe -->
                            <img src="{{ asset('uploads/superheroes/' ~ super_hero.nomImage) }}" alt="{{ super_hero.nom }}" style="width: 100px; height: auto;">
                        {% else %}
                            Pas d'image
                        {% endif %}
                    </td>
                    <td>{{ super_hero.creeLe ? super_hero.creeLe|date('d/m/Y H:i') : '' }}</td>
                    <td>
                        <a href="{{ path('app_super_hero_show', {'id': super_hero.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form method="post" action="{{ path('app_super_hero_delete', {'id': super_hero.id}) }}" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce pouvoir ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ super_hero.id) }}">
                                <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>   
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Aucun Super Héros.
        </div>
    {% endif %}
    <a href="{{ path('app_super_hero_new') }}" class="btn btn-primary mt-3">Créer un nouveau Super Héros</a>
</div>
{% endblock %}
