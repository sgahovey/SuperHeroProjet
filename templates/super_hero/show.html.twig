{% extends 'base.html.twig' %}

{% block title %}Détails de {{ super_hero.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Détails du Super Héros</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ super_hero.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ super_hero.nom }}</td>
            </tr>
            <tr>
                <th>Alter Ego</th>
                <td>{{ super_hero.alterEgo }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ super_hero.estDisponible ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Niveau d'énergie</th>
                <td>{{ super_hero.niveauEnergie }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ super_hero.biographie }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if super_hero.nomImage %}
                        <!-- Affiche l'image si elle existe -->
                        <img src="{{ asset('uploads/superheroes/' ~ super_hero.nomImage) }}" alt="Image de {{ super_hero.nom }}" style="width: 200px; height: auto;">
                    {% else %}
                        Pas d'image
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ super_hero.creeLe ? super_hero.creeLe|date('d/m/Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-warning">Modifier</a>
</div>
{% endblock %}
