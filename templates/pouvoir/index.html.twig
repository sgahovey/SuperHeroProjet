{% extends 'base.html.twig' %}

{% block title %}Liste des Pouvoirs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Pouvoirs</h1>

    {% if pouvoirs|length > 0 %}
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Niveau</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for pouvoir in pouvoirs %}
                <tr>
                    <td>{{ pouvoir.id }}</td>
                    <td>{{ pouvoir.nom }}</td>
                    <td>{{ pouvoir.description}}</td>
                    <td>{{ pouvoir.niveau }}</td>
                    <td>
                        <a href="{{ path('app_pouvoir_show', {'id': pouvoir.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_pouvoir_edit', {'id': pouvoir.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_pouvoir_heros', {'id': pouvoir.id}) }}" class="btn btn-primary btn-sm">Héros associés</a>
                        <form method="post" action="{{ path('app_pouvoir_delete', {'id': pouvoir.id}) }}" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce pouvoir ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pouvoir.id) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Aucun pouvoir trouvé.
        </div>
    {% endif %}

    <a href="{{ path('app_pouvoir_new') }}" class="btn btn-success mt-3">Créer un nouveau Pouvoir</a>
</div>
{% endblock %}
