{% extends 'base.html.twig' %}

{% block title %}Détails du Pouvoir{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre principal -->
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">Détails du Pouvoir</h1>
        <p class="text-secondary">Explorez les informations détaillées du pouvoir sélectionné.</p>
    </div>

    <!-- Tableau des détails -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Informations du Pouvoir</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered text-center">
                        <tbody>
                            <tr>
                                <th class="bg-light text-danger">Nom</th>
                                <td>{{ pouvoir.nom }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light text-danger">Description</th>
                                <td>{{ pouvoir.description }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light text-danger">Niveau</th>
                                <td>
                                    <span class="badge 
                                        {{ pouvoir.niveau <= 2 ? 'bg-success' : 
                                           pouvoir.niveau <= 4 ? 'bg-warning' : 
                                           'bg-danger' }}">
                                        {{ pouvoir.niveau }}
                                    </span>
                                </td>
                            </tr>
                            {% if pouvoir.superHeroes|length > 0 %}
                                <tr>
                                    <th class="bg-light text-danger">Héros Associés</th>
                                    <td>
                                        {% for hero in pouvoir.superHeroes %}
                                            <span class="badge bg-danger">
                                                <a href="{{ path('app_super_hero_show', {id: hero.id}) }}" class="text-decoration-none text-white">
                                                    {{ hero.nom }}
                                                </a>
                                            </span>
                                            {% if not loop.last %}&nbsp;{% endif %}
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <th class="bg-light text-danger">Héros Associés</th>
                                    <td class="text-muted">Aucun héros associé.</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_pouvoir_index') }}" class="btn btn-outline-danger me-2">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
